.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #A08F64

  &__container
    position relative
    text-align: center
    padding 20px 0 18px 0
    +above($breakpoints.sm)
      text-align: start
      padding 40px 0 18px 0
    +above($breakpoints.md)
      padding 80px 0 18px 0
    +above($breakpoints.xxl)
      padding 100px 0 18px 0

  &__title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 20px 0
    +above($breakpoints.md)
      padding 0 0 20px 0
    +above($breakpoints.xxl)
      padding 0 0 0 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 20px
    padding-bottom 10px
    +above($breakpoints.sm)
      padding-bottom 40px
      align-items: flex-start
      flex-direction: row
    +above($breakpoints.md)
      padding-bottom 80px
      gap: 60px
      justify-content start
    +above($breakpoints.xxl)
      margin-top -23px
      padding-bottom 100px
      gap: 205px

  &__box-text
    display: flex
    flex-direction: row
    gap: 20px
    +above($breakpoints.sm)
      padding-top 30px
    +above($breakpoints.xxl)
      padding-top 49px

  &__line
    display: none
    +above($breakpoints.sm)
      display: block
      width 80px
      height: 1px
      background-color #fff
      margin-top 14px
      +above($breakpoints.md)
        margin-top 18px
      +above($breakpoints.xxl)
        margin-top 21px

  &__box-form
    width 100%
    max-width: 380px
    backdrop-filter: blur(36px);
    background: rgba(0, 0, 0, 0.2)
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 20px
    padding 20px 20px 20px 20px
    border: 2px solid #AB996F50
    +above($breakpoints.sm)
      padding 50px 50px 56px 50px
      gap 30px

  &__form
    display: flex
    flex-direction: column
    gap: 8px
    +above($breakpoints.sm)
      gap: 14px

  &__footer-wrapper
    margin-bottom 10px
    position relative
    z-index 1
    &:after
      content: "";
      z-index: -1;
      position: absolute;
      width: 1780px;
      height: 1px;
      background-color: #99856d;
      bottom: 0;
      left: -25%;
    +above($breakpoints.sm)
      margin-bottom 20px

