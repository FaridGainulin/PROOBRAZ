.invest-section
  background-color #fff

  &__container
    position relative
    color: #1F1F1D
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 60px 0 60px 0
    +above($breakpoints.xxl)
      padding 100px 0 98px 0

  &__title
    padding 0 0 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 0 0 5px 0
    +above($breakpoints.md)
      padding 0 0 5px 0
    +above($breakpoints.xxl)
      padding 0 0 5px 0

  &__box
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 20px
    +above($breakpoints.sm)
      flex-direction: row-reverse
      justify-content space-between

  &__box-text
    width 621px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: row
      flex-wrap: wrap
      row-gap: 8px
      column-gap: 20px

  &__card
    position relative
    width 248px !important
    height: 90px
    text-align: center
    +above($breakpoints.sm)
      width 193px !important
      height: 90px
      text-align: start
    +above($breakpoints.md)
      width 222px !important
      height: 132px
    +above($breakpoints.xxl)
      width 248px !important
      height: 153px


  &__card-title
    color: #b1b1b1
    padding-bottom 6px
    font-size: 28px
    +above($breakpoints.sm)
      color: #EAEAEA
      font-size: 28px
    +above($breakpoints.md)
      font-size: 54px
    +above($breakpoints.xxl)
      font-size: 64px

  &__card-icon
    position: absolute
    top: 8px;
    left: 138px;
    +above($breakpoints.sm)
      top: 13px;
      left: 28px;
    +above($breakpoints.md)
      top: 41px;
      left: 38px;
    +above($breakpoints.xxl)
      top: 48px;
      left: 43px;

  &__card-text
    color: #6C6C6C

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    gap: 20px
    +above($breakpoints.sm)
      gap: 20px
      text-align: start
      align-items: flex-start
      padding-top 14px

  &__img
    width 300px
    height: auto
    margin 0 auto
    +above($breakpoints.md)
      width 482px
    +above($breakpoints.xxl)
      position: absolute
      top: 237px;
      left: -370px;
      width: 750px;


.invest-item
  width 260px
  +above($breakpoints.sm)
    width 280px
  +above($breakpoints.xxl)
    width 380px
