.thanks-section
  display: flex
  flex-direction: column
  justify-content center
  align-items: center
  height: 100%

  &__container
    padding 0 15px
    color: #fff
    max-width: 850px
    margin: 0 auto
    text-align: center

  &__inner-text
    padding: 20px 0 40px 0

  &__container a
    max-width 300px
    margin: 0 auto

.thanks-page
  background-image: url("../images/main-section-bg.jpg")
  background-repeat: no-repeat
  background-position: center
  background-size: cover

.header-thanks-wrapper
  padding 10px 0
  position relative
  z-index 1
  &:after
    content: "";
    z-index: -1;
    position: absolute;
    width: 100%;
    height: 1px;
    background-color: #85745f
    bottom: 0
    #85745f
    +above($breakpoints.sm)
      background-color: #99856d;
.footer-thanks-wrapper
  padding 10px 0
  position relative
  z-index 1
  &:after
    content: "";
    z-index: -1;
    position: absolute;
    width: 100%;
    height: 1px;
    background-color: #99856d;
    bottom: 106px;
    +above($breakpoints.sm)
      bottom: 130px;

